<h1>Author: <%= author.name %></h1>
<p><%= author.date_of_birth_formatted || 'unknown' %> - <%= author.date_of_death_formatted || 'unkown'%></p>

<div style="margin-left:20px;margin-top:20px">
  <h2 style="font-size: 1.5rem;">Books</h2>
  <% if (authorBooks.length) { %>
    <dl>
      <% authorBooks.forEach(function(book) { %>
        <dt>
          <a href="<%= book.url %>"><%= book.title %></a>
        </dt>
        <dd><%= book.summary %></dd>
      <% }); %>
    </dl>
  <% } else { %>
    <p>This author has no books.</p>
  <% } %>
</div>

<hr/>
<p>
  <a href="<%= author.url + '/update' %>" class="btn btn-primary">Update Author</a>
  <a href="<%= author.url + '/delete' %>" class="btn btn-danger">Delete Author</a>
</p>

